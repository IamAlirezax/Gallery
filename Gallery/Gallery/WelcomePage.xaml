<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  Title="Welcome to Marjan's Art Gallery"  xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Gallery.WelcomePage">
   <StackLayout>

       <Image  Source="Gallery.Images.Logo.jpg"  />
       <ListView x:Name= "FirstList" SeparatorColor="Aqua" ItemSelected="Handle_ItemSelected" >

          <ListView.ItemTemplate>
              <DataTemplate>
                  <TextCell Text="{Binding title}" Detail="{Binding info}" />
              </DataTemplate>


          </ListView.ItemTemplate>
       </ListView>   
       </StackLayout>
</ContentPage>
